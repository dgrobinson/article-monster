# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Processing Email (where you send newsletters/articles)
PROCESSING_EMAIL=articles@your-domain.com
# This should be the same as SMTP_USERNAME for Gmail setup

# Kindle Email  
KINDLE_EMAIL=your-kindle@kindle.com
FROM_EMAIL=your-email@gmail.com

# Database (optional, defaults work for Docker)
DATABASE_URL=postgresql://postgres:password@db:5432/article_library

# Redis (optional, defaults work for Docker)
REDIS_URL=redis://redis:6379