# Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here

# Application Security
SECRET_KEY=your_super_secret_key_at_least_32_characters_long
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
KINDLE_EMAIL=vole-paradox-suppress@kindle.com
FROM_EMAIL=your_email@gmail.com

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_admin_password
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/key.pem

# External Services (optional)
SENTRY_DSN=https://your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Performance Tuning
MAX_WORKERS=4
MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=256mb